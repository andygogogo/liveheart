<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="com.liuwb.demofloatheartview.MainActivity">

    <com.liuwb.demofloatheartview.view.FloatHeartBubbleSurfaceView
        android:id="@+id/float_heart_view"
        android:layout_width="150dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/float_heart_view">

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="start"
            />

        <Button
            android:id="@+id/add_speed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="speed +"
            />

        <Button
            android:id="@+id/down_speed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="speed -"
            />
    </LinearLayout>

</RelativeLayout>
